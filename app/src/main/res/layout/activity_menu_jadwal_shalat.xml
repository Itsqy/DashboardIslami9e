<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBF0FB"
    tools:context=".menu.shalat.MenuJadwalShalatActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_jadwalshalat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/toolbarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        app:title="Jadwal Shalat"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/iv_bg_jadwal_shalat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_header_jadwal_sholat"
        app:layout_constraintTop_toBottomOf="@id/toolbar_jadwalshalat" />

    <TextView
        android:id="@+id/tv_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Selasa , 25 Oktober"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_jadwalshalat" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Kabupaten Bogor"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_today" />


    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_location"
        app:layout_constraintEnd_toStartOf="@+id/tv_location"
        app:layout_constraintTop_toTopOf="@+id/tv_location"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_rounded_jadwal_sholat"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_imsak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Imsak" />

            <TextView
                android:id="@+id/tv_time_imsak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="230dp"
                android:gravity="center"
                android:text="04:00" />

            <ImageView
                android:id="@+id/iv_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shubuh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Shubuh" />

            <TextView
                android:id="@+id/tv_time_shubuh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="218dp"
                android:gravity="center"
                android:text="04:00" />

            <ImageView
                android:id="@+id/iv_alarm1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dhuha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Dhuha" />

            <TextView
                android:id="@+id/tv_time_dhuha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="225dp"
                android:gravity="center"
                android:text="04:00" />

            <ImageView
                android:id="@+id/iv_alarm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Dzuhur" />

            <TextView
                android:id="@+id/tv_time_dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="212dp"
                android:gravity="center"
                android:text="04:00" />

            <ImageView
                android:id="@+id/iv_alarm4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ashar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Ashar" />

            <TextView
                android:id="@+id/tv_time_ashar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="228dp"
                android:gravity="center"
                android:text="04:00" />

            <ImageView
                android:id="@+id/iv_alarm5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Maghrib" />

            <TextView
                android:id="@+id/tv_time_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="209dp"
                android:gravity="center"
                android:text="04:09" />

            <ImageView
                android:id="@+id/iv_alarm6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_isya"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:text="Isya" />

            <TextView
                android:id="@+id/tv_time_isya"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="237dp"
                android:gravity="center"
                android:text="04:09" />

            <ImageView
                android:id="@+id/iv_alarm7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/img_clock" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#C5E6DB" />


    </LinearLayout>


    <ProgressBar
        android:id="@+id/pb_jadwal_shalat"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>