<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail_doa"
    android:orientation="vertical"
    tools:context=".menu.Doa.DetailDoaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/bg_rounded_doa"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/tv_title_doa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Surat Al Fatihah"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:fontFamily="@font/poppins_semi_bold"
                android:id="@+id/tv_arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيْمِ"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_latin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bismillāhir-raḥmānir-raḥīm(i)."
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskripsi"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_arti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dengan nama Allah Yang Maha Pengasih lagi Maha Penyayang."
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"
                />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>